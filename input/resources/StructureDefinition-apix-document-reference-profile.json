{
  "resourceType": "StructureDefinition",
  "id": "apix-document-reference-profile",
  "url": "http://example.com/fhir/StructureDefinition/apix-document-reference-profile",
  "version": "1.0.0",
  "name": "ApixDocumentReferenceProfile",
  "title": "APIX DocumentReference Profile",
  "status": "draft",
  "publisher": "APIX IG Project",
  "description": "Profile for regulatory documents in API submissions.",
  "fhirVersion": "5.0.0",
  "kind": "resource",
  "abstract": false,
  "type": "DocumentReference",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/DocumentReference",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "DocumentReference.type",
        "path": "DocumentReference.type",
        "min": 1,
        "binding": {
          "strength": "required",
          "valueSet": "http://example.com/fhir/ValueSet/apix-document-type"
        }
      },
      {
        "id": "DocumentReference.status",
        "path": "DocumentReference.status",
        "min": 1,
        "constraint": [
          {
            "key": "apix-doc-status",
            "severity": "error",
            "human": "Status must be current or superseded",
            "expression": "value in ('current' | 'superseded')"
          }
        ]
      },
      {
        "id": "DocumentReference.content.attachment.contentType",
        "path": "DocumentReference.content.attachment.contentType",
        "min": 1,
        "constraint": [
          {
            "key": "apix-doc-content-type",
            "severity": "error",
            "human": "Content type must be application/pdf or text/html",
            "expression": "value in ('application/pdf' | 'text/html')"
          }
        ]
      },
      {
        "id": "DocumentReference.content.attachment.url",
        "path": "DocumentReference.content.attachment.url",
        "min": 1
      },
      {
        "id": "DocumentReference.extension:submissionDate",
        "path": "DocumentReference.extension",
        "sliceName": "submissionDate",
        "min": 0,
        "max": "1",
        "type": [
          {
            "code": "Extension",
            "profile": ["http://example.com/fhir/StructureDefinition/SubmissionDate"]
          }
        ]
      }
    ]
  }
}